<h2>登入</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <div class="control">
      <%= f.label :email, '電子信箱' %><br />
      <%= f.email_field :email, autocomplete: "email", class: "input" %>
    </div>
    
  </div>

  <div class="field">
    <div class="control">
      <%= f.label :password, '密碼' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, '記住我' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "登入", class: "button is-primary" %>
    <%= render "devise/shared/links" %>
  </div>

<% end %>

