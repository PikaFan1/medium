<h1 class= 'title'>我的文章</h1>

<% @stories.each do |story| %>
  <div class="content">
    <h2 class="title">
      <%= story.title %>
      <%= content_tag :span, '已發佈', class: 'tag is-primary' if story.published? %>
      <%= content_tag :span, '未發佈', class: 'tag' if story.draft? %>
      <%= content_tag :span, '編輯中', class: 'tag' if story.pending_story != nil %>

    </h2> 
    <p><%= story.content %></p>
    <p>
        最後更新時間：<%= time_ago_in_words(story.updated_at) %>前

        <% if story.pending_story != nil %>
          <%= link_to '編輯', edit_pending_story_path(story), class: 'button is-text is-small' %>
        <% else %>
          <%= link_to '編輯', edit_story_path(story), class: 'button is-text is-small' %>
        <% end %>

        <%= link_to '刪除', story_path(story), method: 'delete', class: 'button is-danger is-small', data:{confirm: '確認刪除？ '} %>
    </p>
    <p>創建時間：<%= story.created_at.to_date %></p>
    <hr>
  </div>
<% end %> 
